@model BirSiberDanismanlik.Models.Appointment
@{
    ViewData["Title"] = "Randevu Sil";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card bg-dark text-light shadow-lg border-0">
                <div class="card-body p-4">
                    <h2 class="mb-4 fw-bold text-center">Randevu Sil</h2>
                    <p class="text-danger text-center mb-4">Bu randevuyu silmek istediğinize emin misiniz?</p>
                    <dl class="row mb-0">
                        <dt class="col-5">Hizmet Türü</dt>
                        <dd class="col-7">@Model.ServiceType</dd>
                        <dt class="col-5">Tarih ve Saat</dt>
                        <dd class="col-7">@Model.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</dd>
                        <dt class="col-5">Durum</dt>
                        <dd class="col-7">@Model.Status</dd>
                        <dt class="col-5">Notlar</dt>
                        <dd class="col-7">@Model.Notes</dd>
                    </dl>
                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger w-100 fw-bold">Evet, Sil</button>
                        <a asp-action="Index" class="btn btn-outline-light w-100 mt-2">İptal</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 