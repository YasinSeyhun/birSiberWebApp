@model IEnumerable<BirSiberDanismanlik.Models.Appointment>
@{
    ViewData["Title"] = "Randevularım";
}
<div class="container py-4">
    <h2 class="mb-4 fw-bold">Randevularım</h2>
    <a href="/Appointment/Create" class="btn btn-success mb-3">Yeni Randevu Oluştur</a>
    <div class="table-responsive">
        <table class="table table-dark table-hover align-middle rounded shadow">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Hizmet Türü</th>
                    <th>Tarih</th>
                    <th>Durum</th>
                    <th>Notlar</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.ServiceType</td>
                        <td>@item.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@item.Status</td>
                        <td>@item.Notes</td>
                        <td>
                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-outline-info btn-sm">Detay</a>
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-outline-warning btn-sm">Düzenle</a>
                            <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-outline-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 