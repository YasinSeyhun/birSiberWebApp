@model BirSiberDanismanlik.Controllers.AdminController.CreateUserViewModel
@{
    ViewData["Title"] = "Yeni Kullanıcı Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Yeni Kullanıcı Oluştur</h2>
<form asp-action="CreateUser" method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label class="form-label">Ad Soyad</label>
        <input name="FullName" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Kullanıcı Adı</label>
        <input name="UserName" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">E-posta</label>
        <input name="Email" class="form-control" type="email" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Telefon Numarası</label>
        <input name="PhoneNumber" class="form-control" type="tel" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Şifre</label>
        <input name="Password" class="form-control" type="password" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Şifre (Tekrar)</label>
        <input name="ConfirmPassword" class="form-control" type="password" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Rol</label>
        <select name="Role" class="form-select">
            <option value="User">User</option>
            <option value="Admin">Admin</option>
            <option value="Çalışan">Çalışan</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Oluştur</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 