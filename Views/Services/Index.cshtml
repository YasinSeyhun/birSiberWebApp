@model IEnumerable<BirSiberDanismanlik.Models.Service>
@{
    ViewData["Title"] = "Hizmetler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-4">
    <h2 class="mb-4 fw-bold">Hizmetler</h2>
    <button class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#createServiceModal">+ Yeni Hizmet Ekle</button>
    <table class="table table-dark table-striped align-middle shadow rounded">
        <thead>
            <tr>
                <th>Hizmet Adı</th>
                <th>Açıklama</th>
                <th>Fiyat</th>
                <th>Aktif mi?</th>
                <th>Oluşturulma</th>
                <th style="width:140px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var service in Model ?? new List<BirSiberDanismanlik.Models.Service>())
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.Description</td>
                <td>@service.Price.ToString("C")</td>
                <td>
                    @if (service.IsActive)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Pasif</span>
                    }
                </td>
                <td>@service.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <button class="btn btn-warning btn-sm me-1" data-bs-toggle="modal" data-bs-target="#editServiceModal" data-id="@service.Id">Düzenle</button>
                    <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteServiceModal" data-id="@service.Id">Sil</button>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <!-- Yeni Hizmet Ekle Modal (placeholder) -->
    <div class="modal fade" id="createServiceModal" tabindex="-1" aria-labelledby="createServiceModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content bg-dark text-light">
                <div class="modal-header">
                    <h5 class="modal-title" id="createServiceModalLabel">Yeni Hizmet Ekle</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Form buraya gelecek -->
                    <div class="text-secondary">Form entegrasyonu yapılacak.</div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hizmet Düzenle Modal (placeholder) -->
    <div class="modal fade" id="editServiceModal" tabindex="-1" aria-labelledby="editServiceModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content bg-dark text-light">
                <div class="modal-header">
                    <h5 class="modal-title" id="editServiceModalLabel">Hizmeti Düzenle</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Form buraya gelecek -->
                    <div class="text-secondary">Form entegrasyonu yapılacak.</div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hizmet Sil Modal (placeholder) -->
    <div class="modal fade" id="deleteServiceModal" tabindex="-1" aria-labelledby="deleteServiceModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content bg-dark text-light">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteServiceModalLabel">Hizmeti Sil</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="text-danger">Silme işlemi için form entegrasyonu yapılacak.</div>
                </div>
            </div>
        </div>
    </div>
</div> 