        new { Name = "Enes Tayboğa", Title = "Siber Güvenlik Uzmanı", Image = "enes-tayboga.jpeg", Bio = "Sosyal mühendislik, siber farkındalık ve insan odaklı saldırı türleri üzerine çalışan Enes Tayboğa, kurum içi eğitimler ve simülasyonlarla çalışanların güvenlik bilincini artırmaktadır." },
