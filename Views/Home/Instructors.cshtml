        new { Name = "Yasin Seyhun", Title = "Siber Güvenlik Uzmanı", Image = "yasin-seyhun.jpeg", Bio = "Bulut güvenliği, yeni nesil teknolojiler ve siber tehditlerin önlenmesi üzerine çalışan Yasin Seyhun, sektörde yenilikçi çözümler geliştiren bir uzmandır." }
