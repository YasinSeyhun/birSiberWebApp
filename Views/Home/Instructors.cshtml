}
<style>
    .instructor-card {
        background: #181b22;
        border-radius: 1.5rem;
        box-shadow: 0 4px 24px #0006;
        transition: transform .2s, box-shadow .2s;
        border: none;
    }
    .instructor-card:hover {
        transform: translateY(-8px) scale(1.03);
        box-shadow: 0 8px 32px #00ffe799;
    }
    .instructor-img {
        border-radius: 50%;
        object-fit: cover;
        width: 120px;
        height: 120px;
        border: 3px solid #00ffe7;
        margin-top: -60px;
        background: #10131a;
    }
</style>
<div class="container py-5">
    <h2 class="fw-bold text-center mb-5">Eğitmenlerimiz</h2>
    <div class="row g-4 justify-content-center">
        @foreach (var ins in instructors)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex align-items-stretch">
                <div class="card instructor-card w-100 text-center p-4 position-relative">
                    <img src="~/images/@ins.Image" alt="@ins.Name" class="instructor-img mx-auto shadow">
                    <div class="card-body mt-3">
                        <h5 class="card-title text-white">@ins.Name</h5>
                        <p class="card-text text-info">@ins.Title</p>
                        <p class="card-text text-secondary small">@ins.Bio</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 